<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
 >


    <TextView
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã NV:"
        android:textColor="#F63131"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/manv"></TextView>
    <TextView
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ tên:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/hoten"></TextView>
    <TextView
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phòng ban:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/phongban"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/logochinhsua"
            android:id="@+id/btnchinhsua"></Button>
        <Button
            android:layout_marginLeft="30dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/logoxoa"
            android:id="@+id/btnxoa"></Button>
    </LinearLayout>
</LinearLayout>