<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_marginTop="150dp"
    android:padding="10dp"
    tools:context=".Asm.giaodien4">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ NHÂN SỰ"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#399509"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPOLY SOFTWARE COMPANY"
        android:textSize="21sp"
        android:textColor="#EF5203"
        android:textStyle="bold"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="75dp"
        >
        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:background="@drawable/vienbutton"
            android:clickable="true"
            android:onClick="myClickFunction">
        <ImageButton
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_home"
            android:background="@color/white"
            android:layout_gravity="center"></ImageButton>
            <TextView
                android:id="@+id/phongban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng ban"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:textColor="#F33131"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:background="@drawable/vienbutton"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:onClick="myClickFunction1"
            >
            <ImageButton
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_nhomnguoi"
                android:background="@color/white"
                android:layout_gravity="center"></ImageButton>
            <TextView
                android:id="@+id/nhanvien"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhân viên"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textColor="#3351ED"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:background="@drawable/vienbutton"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:onClick="myClickFunction2">
        <ImageButton
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_thoat"
            android:background="@color/white"
            android:layout_gravity="center"></ImageButton>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:id="@+id/thoat"
            ></TextView>
    </LinearLayout>

</LinearLayout>