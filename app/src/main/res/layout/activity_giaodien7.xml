<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Asm.giaodien7"
    android:orientation="vertical"
    android:background="@drawable/luffyg5"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Nhân Viên Mới"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:id="@+id/themnv"
        android:textSize="35dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ma nhan vien"
            android:textColor="@color/white"
            android:background="@drawable/vienbutton3"
            android:id="@+id/manv"></EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ten nhan vien"
            android:textColor="@color/white"
            android:background="@drawable/vienbutton3"
            android:id="@+id/tennv"></EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phong ban"
            android:textColor="@color/white"
            android:background="@drawable/vienbutton3"
            android:id="@+id/phongban"></EditText>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Submit"
        android:background="@drawable/vienbutton4"
        android:id="@+id/btnsubmit"></Button>

</LinearLayout>